<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradation_background">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number Of As Attained" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_a">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number Of Bs Attained" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_b">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number Of Cs Attained" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_c">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number Of Ds Attained" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_d">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_e"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number Of Es Attained" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/calculate_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Calculate"
        android:textColor="#ffff"
        android:background="@drawable/circular_button"
        app:layout_constraintEnd_toEndOf="@+id/layout_e"
        app:layout_constraintStart_toStartOf="@+id/layout_e"
        app:layout_constraintTop_toBottomOf="@+id/layout_e" />

</android.support.constraint.ConstraintLayout>